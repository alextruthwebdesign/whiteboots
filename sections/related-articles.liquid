{{ 'component-article-card.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}

{% assign usetags = 'bootmaking,collaborations,history,products' | split: ',' %}

{% assign counter = 0 %}
{% for tag in article.tags %}
  {% assign skip_articles = article.handle | split: '.....' %}
  {% for related_article in blog.articles %}
    {% if related_article.tags contains tag and counter < 4 %}
      {% unless skip_articles contains related_article.handle %}
        {% assign counter = counter | plus: 1 %}
      {% endunless %}
    {% endif %}
  {% endfor %}
{% endfor %}

<div id="related-articles" class="main-blog page-width section-{{ section.id }}-padding">
  <div class="title"><span>RELATED ARTICLES</span></div>
  <div class="blog__posts  blog-articles--masonry count-{{ counter }}" style="display:flex;">
    {% for tag in article.tags %}
      
      {% assign skip_articles = article.handle | split: '.....' %}
      {% for related_article in blog.articles %}
        {% if related_article.tags contains tag and counter < 4 %}
          {% unless skip_articles contains related_article.handle %}
            {% assign temp = related_article.handle | split: '.....' %}
            {% assign skip_articles = skip_articles | concat: temp %}

            <div class="blog-articles__article article">
              {%- render 'article-card',
                article: related_article,
                media_height: true,
                media_aspect_ratio: 1,
                show_image: true,
                show_date: true,
                show_author: true,
                show_excerpt: true,
                usetags: usetags
              -%}
            </div>
          {% endunless %}
        {% endif %}
      {% endfor %}
    {% endfor %}
  </div>
</div>

