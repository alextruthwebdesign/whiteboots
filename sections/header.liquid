<script type="module">
  customElements.define('whitesboots-navigation', class extends HTMLElement {
    constructor() {
      super()
      {% comment %} console.log(this) {% endcomment %}
      {% comment %} const shadowRoot = this.attachShadow({ mode: 'open' }) {% endcomment %}
      const shadowRoot = this
      const tmp = document.getElementById('whitesboots-navigation-template')
      {% comment %} shadowRoot.appendChild(tmp.content.cloneNode(true)) {% endcomment %}
      const hamburger = shadowRoot.querySelector('.hamburger')
      const mobile = shadowRoot.querySelector('.mobile')
      hamburger.addEventListener('click', () => {
        mobile.classList.toggle('open')
        hamburger.classList.toggle('open')
      })
      const url = location.href.split('/')
      const page = url[url.length - 2]
      const links = shadowRoot.querySelectorAll(`[href='/${page}']`);

      if (links.length> 0) {
        for (let i = 0 ; i < links.length ; i++) {
          links[i].classList.add('active');
          if (links[i].parentElement.classList.contains('dropdown')) {
            links[i].parentElement.parentElement.classList.add('active');
          } else {
            links[i].parentElement.classList.add('active');
          }
        }
      } else {
        let home = shadowRoot.querySelector(`[href='/home']`);

        if(home){
          home.classList.add('active');
          if (home.parentElement.classList.contains('dropdown')) {
            home.parentElement.parentElement.classList.add('active');
          } else {
            home.parentElement.classList.add('active');
          }
        }
      }

      //subMobileNav handle
      const subMobileNavs = shadowRoot.querySelectorAll('.subMobileNav');

      if(subMobileNavs) {
        subMobileNavs.forEach(subMobileNav => {
          subMobileNav.addEventListener('click', e => {
            let id = e.target.dataset.id;
            let subNavMenu = shadowRoot.querySelector('#'+ id);

            if(subNavMenu){
              subNavMenu.classList.add('active');
            }
          })
        });
      }

      const subnavBacks = shadowRoot.querySelectorAll('.subnav-back');
      subnavBacks.forEach(el =>{
        el.addEventListener('click', e =>{
          e.target.parentElement.classList.remove('active');
        })
      })
    }
  })
  </script>
